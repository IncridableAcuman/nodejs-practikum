{{#if product.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
 {{#each product}}
        <div class="container mt-5">
           <div class="col">
          <div class="card shadow">
            <img src="{{image}}" />
            <div class="card-header fw-bold bg-dark text-white">
                <p>{{title}}</p>
            </div>
            <div class="card-body">

              <div class="d-flex justify-content-between align-items-center">
                <p class="p-0 m-0"> {{getDate createdAt}} </p>
                <small class="text-body-secondary fs-5">{{price}}.00$</small>
              </div>
              <div class="card-footer bg-dark text-white" >
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-outline-primary"  href="/product/{{_id}}">Detail</a>
                    {{#if @root.token}}
                     {{#ifequal user @root.userId}}
                    <a type="button"  class="btn btn-outline-secondary" href="/edit-product/{{_id}}">Edit</a>
                    <form action="/delete-product/{{_id}}" method="post">
                        <button type="sumbit" class="btn btn-outline-danger">Delete</button>
                    </form>
                     {{/ifequal}}
                    {{/if}}
                    
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
 {{/each}}

</div>


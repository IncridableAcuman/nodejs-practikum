{{#if myProduct.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
 {{#each myProduct}}
        <div class="container mt-5">
           <div class="col">
          <div class="card shadow">
            <img src="{{image}}" />
            <div class="card-header fw-bold bg-dark text-white">
                <p>{{title}}</p>
            </div>
            <div class="card-body">
                <p class="card-text">{{description}}</p>
              <div class="d-flex justify-content-end align-items-center">
              </div>
              <div class="d-flex  gap-2 align-items-center justify-content-between">
                <div class="avatar bg-primary">
                <p> {{getANameCharacter user.firstname user.lastname}} </p>
                </div>
                <p class="m-0">{{user.firstname}} {{user.lastname}} </p>
                <small class="text-body-secondary fs-5">{{price}}.00$</small>
              </div>
            </div>
          </div>
        </div>
        </div>
 {{/each}}

</div>

{{else}}
<section class="page_404 w-75 mx-auto">
  <div class="row">
    <div class="col-sm-12">
      <div class="col-sm-10 col-sm-offset-1 text-center">
        <div class="four_zero_four_bg text-center">
          <h1>404</h1>
        </div>
        <div class="contant_box_404">
          <h3 class="h2">
            Add new Products
          </h3>
          <a href="/add" class="btn btn-primary btn-lg mb-5">Add products</a>
        </div>
      </div>
    </div>
  </div>
</section>
{{/if}}
